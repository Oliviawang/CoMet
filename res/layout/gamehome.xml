<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/back">
<include android:id="@+id/FrameLayout01" layout="@layout/frame_header"></include>
<LinearLayout
    android:id="@+id/linearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/FrameLayout01"
    android:orientation="horizontal"
		
		android:layout_marginTop="-3dip"
		android:background="@drawable/action_bar" >

    <ImageButton
        android:id="@+id/gameimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user" 
        android:layout_marginBottom="5dip"
        android:background="#00000000"
        android:layout_marginLeft="5pt"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Recommended Talks"
        android:textColor="@drawable/Gray"
        android:textSize="20dp" 
        android:layout_marginLeft="10pt"
       />

</LinearLayout>
<TextView android:id="@+id/status_search"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/status_bar"
	android:visibility="gone"
	android:layout_below="@id/linearLayout1"
></TextView>
<ListView android:id="@+id/ListView01"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
android:layout_below="@id/linearLayout1"
>
</ListView>



</RelativeLayout>
    


