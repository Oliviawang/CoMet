<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
xmlns:android="http://schemas.android.com/apk/res/android" 
android:layout_height="wrap_content" 
android:layout_width="fill_parent"
android:background="@drawable/time_bar_gray">
<TextView
android:id="@+id/header"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@drawable/darkblue"
android:textColor="@drawable/White">
</TextView>
<LinearLayout   
android:orientation="vertical" 
android:layout_height="wrap_content" 
android:layout_width="wrap_content"
android:layout_below="@id/header"
android:layout_alignParentLeft="true"
android:layout_marginRight="5dip"
android:layout_marginTop="5dip"
android:id="@+id/LinearLayout01">
				<ImageView android:id="@+id/photo"
	android:src="@drawable/default_user"
	android:layout_width="60dip"
	android:layout_height="60dip"
	android:layout_marginBottom="5dip"/>
		<TextView
		android:layout_width="60dip"   
		android:layout_height="wrap_content"   
		android:id="@+id/bookmark" 
		android:drawableLeft="@drawable/bookmark"
		android:gravity="center_vertical|right"
		android:textColor="@drawable/White"
		android:background="@drawable/bookmark_back">
		</TextView>
		<TextView
		android:layout_width="60dip"    
		android:layout_height="wrap_content"   
		android:id="@+id/view" 
		android:drawableLeft="@drawable/view"
		android:gravity="center_vertical|right"
		android:textColor="@drawable/White"
		android:background="@drawable/view_back">
		</TextView>
		<TextView
		android:layout_width="60dip"   
		android:layout_height="wrap_content"  
		android:id="@+id/email" 
		android:drawableLeft="@drawable/email"
		android:gravity="center_vertical|right"
		android:textColor="@drawable/White"
		android:background="@drawable/email_back">
		</TextView>
</LinearLayout>   
<LinearLayout  
         android:layout_width="fill_parent"    
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_below="@id/header"
         android:id="@+id/LinearLayout02"
         android:layout_toRightOf="@id/LinearLayout01"> 
         <TextView    
               android:layout_height="wrap_content"    
               android:layout_width="fill_parent"   
               android:id="@+id/title" 
               android:textStyle="bold"
               android:textColor="@drawable/DarkBlue"
               android:textSize="15dip">  
         </TextView> 
         <TextView    
               android:layout_height="wrap_content"   
             android:layout_width="fill_parent"  
               android:id="@+id/time"
               android:textColor="@drawable/Gray">  
         </TextView>
          <TextView    
               android:layout_height="wrap_content"   
             android:layout_width="fill_parent" 
               android:id="@+id/location"
               android:textColor="@drawable/SteelBlue">  
         </TextView>
          <TextView    
               android:layout_height="wrap_content"   
               android:layout_width="fill_parent" 
               android:id="@+id/author"
               android:textColor="@drawable/SteelBlue">  
         </TextView>
</LinearLayout> 
</RelativeLayout>